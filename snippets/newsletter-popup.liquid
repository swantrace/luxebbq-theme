

<!--modal popup start-->
<div class="modal fade bd-example-modal-lg theme-modal newsletter-popup" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body modal1">
        <div class="container-fluid p-0">
          <div class="row">
            <div class="col-12">
              <div class="modal-bg ns-popup-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <div class="col-6 pl-0 popup-image">
                  <img src="{{ settings.newsletter_bnr_img | img_url: '820x490' }}" class="img-fluid" alt="Subscribe newsletter" loading="lazy">
                </div>
                <div class="col-6 newsletter-wrapper-detail">
                  <div class="popup-details">
                  {% if settings.newsletter_heading != blank %}
                  <h2 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#newsltr_popup_newsletter_heading"{% endif %}>
                    {{ settings.newsletter_heading }}
                  </h2>
                  {% if settings.enable_lang_switcher %}
                  <span class="hide" id="newsltr_popup_newsletter_heading">{{ settings.trans_newsletter_heading | raw }}</span>
                  {% endif %}
                  {% endif %}

                  {% if settings.newsletter_text != blank %}
                  <p {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#newsltr_popup_newsletter_text"{% endif %}>
                    {{ settings.newsletter_text }}
                  </p>
                  {% if settings.enable_lang_switcher %}
                  <span class="hide" id="newsltr_popup_newsletter_text">{{ settings.trans_newsletter_text | raw }}</span>
                  {% endif %}
                  {% endif %}

                  <form action="{{ settings.newsletter_form_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll" class="form-group">
                      <input type="email" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}" class="required email form-control" value="" name="EMAIL" aria-describedby="emailHelp"  d="mce-EMAIL" required>
                      <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                      </div>
                      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" hidden>
                        <input type="text" name="b_17af379706d80b694776f991f_9ebb72e4d2" tabindex="-1" value="">
                      </div>
                      <button type="submit" class="btn btn-solid" name="subscribe" id="mc-embedded-subscribe" {% if settings.enable_lang_switcher %}data-translate="general.newsletter_form.submit"{%endif%}>{{ 'general.newsletter_form.submit' | t }}</button>
                    </div>
                  </form>
                    <div class="social-share">
                      {%- include 'social-sharing' -%}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--modal popup end-->

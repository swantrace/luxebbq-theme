<!-- header start -->
{% capture sectionId %}{{ section.id }}{% endcapture %}
<header class="dtm header-5 header-qurox header-5-inner {% if settings.display_sticky_header %} sticky{% endif %}">
  <div class="mobile-fix-option"></div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="main-menu">
          <div class="menu-left">
            {% if section.settings.logo %}
            <div class="brand-logo" itemscope itemtype="http://schema.org/Organization">
              <a href="/" itemprop="url"> 
                <img src="{{ section.settings.logo | img_url:'master' }}" class="img-fluid lazyload {% if settings.enable_blur_lazy_load %} blur-up {% endif %}" alt="{{ shop.name }}" style="max-width:{{ section.settings.logo_max_width }}px">
              </a>
            </div>
            {% else %}
            <h2 itemprop="logo"><a href="/" itemprop="url">{{ shop.name }}</a></h2>
            {% endif %}
            {% if settings.eneble_header_sidebar %}
            {% include 'header-sidebar' %}
            {% endif %}
          </div>
          <div class="menu-right pull-right main-navigation">
            <div class="menu-for-dekstopp">
              <nav id="main-nav">
                <div class="toggle-nav">
                  <i class="fa fa-bars sidebar-bar"></i>
                </div>
                <!-- Horizontal menu -->
                <ul id="main-menu" class="sm pixelstrap sm-horizontal {% if settings.enable_rtl %} sm-rtl{% endif %}">
                  <li>
                    <div class="mobile-back text-right">
                      <span {% if settings.enable_lang_switcher %}data-trans-key="layout.navigation.back"{%endif%}>{{ 'layout.navigation.back' | t }}</span>
                      <i class="fa fa-angle-right pl-2" aria-hidden="true"></i>
                    </div>
                  </li>
                  {% for block in section.blocks %}
                  {% capture blockId %}{{ block.id }}{% endcapture %}
                  {% if block.type == 'parent-item' %}
                  <li class="{%- if forloop.index == 1 -%} current {%- endif -%}" >
                    <a href="{{ block.settings.menu_link }}">
                      <span {% if settings.enable_lang_switcher %}class="lang_trans border-menu" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                        {{ block.settings.menu_name }}
                      </span>
                      {% if settings.enable_lang_switcher %}
                      <span class="hide" id="header1_{{blockId}}_menu_name">{{ block.settings.trans_menu_name | raw }}</span>
                      {% endif %}                        
                      {% if block.settings.show_label %}
                      <div class="lable-nav {{ block.settings.label_text }}">
                        <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_label_text"{% endif %}>
                          {{ block.settings.label_text }}
                        </span>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_label_text">{{ block.settings.trans_label_text | raw }}</span>
                        {% endif %} 
                      </div>
                      {% endif %}
                    </a>
                  </li>
                  {% elsif block.type == 'parent-child-item' %}

                  <li><a href="{{ block.settings.menu_link }}">
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                      {{ block.settings.menu_name }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="header1_{{blockId}}_menu_name">{{ block.settings.trans_menu_name | raw }}</span>
                    {% endif %}   
                    {% if block.settings.show_label %}
                    <div class="lable-nav {{ block.settings.label_text }}">
                      <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_label_text"{% endif %}>
                        {{ block.settings.label_text }}
                      </span>
                      {% if settings.enable_lang_switcher %}
                      <span class="hide" id="header1_{{blockId}}_label_text">{{ block.settings.trans_label_text | raw }}</span>
                      {% endif %} 
                    </div>
                    {% endif %}
                    </a>
                    <ul>
                      {% assign child_linklist = block.settings.submenu_linklist %}
                      {% for sublink in linklists[child_linklist].links %}
                      {% assign child_list_handle = sublink.title | handleize %}
                      {% if linklists[child_list_handle].links != blank %}
                      <li>
                        {% assign data_title = sublink.title | split: '|' | first %}
                        {% assign data_json = sublink.title | split: '|' | last %}
                        <a href="{{ sublink.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_{{sublink.handle}}"{% endif %}>
                          {{ data_title }}
                        </a>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_{{sublink.handle}}">{{ data_json | raw }}</span>
                        {% endif %}
                        <ul>
                          {% for child_sublink in linklists[child_list_handle].links %}
                          <li>
                            {% assign data_title = child_sublink.title | split: '|' | first %}
                            {% assign data_json = child_sublink.title | split: '|' | last %}
                            <a href="{{ child_sublink.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_{{child_sublink.handle}}"{% endif %}>
                              {{ data_title }}
                            </a>
                            {% if settings.enable_lang_switcher %}
                            <span class="hide" id="header1_{{blockId}}_{{child_sublink.handle}}">{{ data_json | raw }}</span>
                            {% endif %}
                          </li>
                          {% endfor %}
                        </ul>
                      </li>
                      {% else %}
                      <li>
                        {% assign data_title = sublink.title | split: '|' | first %}
                        {% assign data_json = sublink.title | split: '|' | last %}
                        <a href="{{ sublink.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_{{sublink.handle}}"{% endif %}>
                          {{ data_title }}
                        </a>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_{{sublink.handle}}">{{ data_json | raw }}</span>
                        {% endif %}
                      </li>
                      {% endif %}
                      {% endfor %}
                    </ul>
                  </li>

                  {% elsif block.type == 'custom-megamenu' %}

                  <li>
                    <a href="{{ block.settings.menu_link }}">
                      <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                        {{ block.settings.menu_name }}
                      </span>
                      {% if settings.enable_lang_switcher %}
                      <span class="hide" id="header1_{{blockId}}_menu_name">{{ block.settings.trans_menu_name | raw }}</span>
                      {% endif %}
                      {% if block.settings.show_label %}
                      <div class="lable-nav {{ block.settings.label_text }}">
                        <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_label_text"{% endif %}>
                          {{ block.settings.label_text }}
                        </span>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_label_text">{{ block.settings.trans_label_text | raw }}</span>
                        {% endif %} 
                      </div>
                      {% endif %}
                    </a>
                    {{ block.settings.custom_menu_html }}
                  </li>

                  {% elsif block.type == 'megamenu' %}

                  <li class="mega hover-cls">
                    <a href="{{ block.settings.menu_link }}">
                      <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                        {{ block.settings.menu_name }}
                      </span>
                      {% if settings.enable_lang_switcher %}
                      <span class="hide" id="header1_{{blockId}}_menu_name">{{ block.settings.trans_menu_name | raw }}</span>
                      {% endif %}
                      {% if block.settings.show_label %}
                      <span class="lable-nav {{ block.settings.label_text }}">
                        <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_label_text"{% endif %}>
                          {{ block.settings.label_text }}
                        </span>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_label_text">{{ block.settings.trans_label_text | raw }}</span>
                        {% endif %} 
                      </span>
                      {% endif %}
                    </a>
                    <ul class="mega-menu full-mega-menu">
                      <li>
                        <div class="container">
                          <div class="row">

                            {% for i in (1..5) %}
                            {% assign for_index = forloop.index | times: 1 -%}
                            {% capture linklist_grid %}linklist_{{ i }}{% endcapture %}
                            {% capture linklist_title %}linklist_title_{{ i }}{% endcapture %}
                            {% capture trans_linklist_title %}trans_linklist_title_{{ i }}{% endcapture %}
                            {% assign megamenu_grid = block.settings[linklist_grid] -%}

                            <div class="col mega-box">
                              <div class="link-section">
                                <div class="menu-title">
                                  <h5 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_linklist_title"{% endif %}>
                                    {{ block.settings[linklist_title] }}
                                  </h5>
                                  {% if settings.enable_lang_switcher %}
                                  <span class="hide" id="header1_{{blockId}}_linklist_title">{{ block.settings[trans_linklist_title] | raw }}</span>
                                  {% endif %} 
                                </div>
                                <div class="menu-content">
                                  <ul>
                                    {% for megamenu_link in linklists[megamenu_grid].links %}
                                    <li>
                                      {% assign data_title = megamenu_link.title | split: '|' | first %}
                                      {% assign data_json = megamenu_link.title | split: '|' | last %}
                                      <a href="{{ megamenu_link.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_{{megamenu_link.handle}}"{% endif %}>
                                        {{ data_title }}
                                      </a>
                                      {% if settings.enable_lang_switcher %}
                                      <span class="hide" id="header1_{{blockId}}_{{megamenu_link.handle}}">{{ data_json | raw }}</span>
                                      {% endif %}
                                    </li>
                                    {% endfor %}
                                  </ul>
                                </div>
                              </div>
                            </div>

                            {% endfor %}  

                          </div>
                        </div>
                        {% if block.settings.img_1 != blank or block.settings.img_2 != blank %}
                        <div class="row banner-padding">

                          {% for i in (1..2) %}
                          {% assign for_index = forloop.index | times: 1 -%}
                          {% capture menu_img %}img_{{ i }}{% endcapture %}
                          {% capture menu_img_url %}img_url_{{ i }}{% endcapture %}
                          <div class="col-xl-6">
                            <a href="{{ block.settings[menu_img_url] }}" class="mega-menu-banner">
                              <img src="{{ block.settings[menu_img] | img_url: 'master' }}" class="img-fluid d-none d-xl-block " alt="{{ image.alt }}">
                            </a>
                          </div>
                          {% endfor %}
                        </div>
                        {% endif %}
                      </li>
                    </ul>
                  </li>
                  
                  {% elsif block.type == 'select-nav-menu' %}

                    {% assign sidebar_menu_id = block.settings.mainmenu -%}
                    {% for mainlink in linklists[sidebar_menu_id].links %}
                    {% assign child_list_handle = mainlink.title | handleize %}     

                    {% if linklists[child_list_handle].links != blank %}

                    <li>
                      {% assign data_title = mainlink.title | split: '|' | first %}
                      {% assign data_json = mainlink.title | split: '|' | last %}
                      <a href="{{ block.settings.menu_link }}">
                        <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                          {{ data_title }}
                        </span>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_menu_name">{{ data_json | raw }}</span>
                        {% endif %}   
                      </a>
                      <ul>
                        {% for submenu in linklists[child_list_handle].links %}
                        {% assign child_child_list_handle = submenu.title | handleize %}
                        {% if linklists[child_child_list_handle].links != blank %}
                        <li>

                          {% assign data_title = submenu.title | split: '|' | first %}
                          {% assign data_json = submenu.title | split: '|' | last %}
                          <a href="{{ submenu.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{submenu.handle}}"{% endif %}>
                            {{ data_title }}
                          </a>
                          {% if settings.enable_lang_switcher %}
                          <span class="hide" id="header1_{{submenu.handle}}">{{ data_json | raw }}</span>
                          {% endif %}

                          <ul>
                            {% for submenu1 in linklists[child_child_list_handle].links %}
                            <li>
                              {% assign data_title = submenu1.title | split: '|' | first %}
                              {% assign data_json = submenu1.title | split: '|' | last %}
                              <a href="{{ submenu1.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{submenu1.handle}}"{% endif %}>
                                {{ data_title }}
                              </a>
                              {% if settings.enable_lang_switcher %}
                              <span class="hide" id="header1_{{submenu1.handle}}">{{ data_json | raw }}</span>
                              {% endif %}
                            </li>
                            {% endfor %}
                          </ul>
                        </li>
                        {% else %}
                        <li>
                          {% assign data_title = submenu.title | split: '|' | first %}
                          {% assign data_json = submenu.title | split: '|' | last %}
                          <a href="{{ submenu.url }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{submenu.handle}}"{% endif %}>
                            {{ data_title }}
                          </a>
                          {% if settings.enable_lang_switcher %}
                          <span class="hide" id="header1_{{submenu.handle}}">{{ data_json | raw }}</span>
                          {% endif %}
                        </li>
                        {% endif %}
                        {% endfor %}
                      </ul>
                    </li>

                    {% else %}

                    <li>
                      {% assign data_title = mainlink.title | split: '|' | first %}
                      {% assign data_json = mainlink.title | split: '|' | last %}
                      <a href="{{ mainlink.url }}">
                        <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#header1_{{blockId}}_menu_name"{% endif %}>
                          {{ data_title }}
                        </span>
                        {% if settings.enable_lang_switcher %}
                        <span class="hide" id="header1_{{blockId}}_menu_name">{{ data_json | raw }}</span>
                        {% endif %}      
                      </a>
                    </li>

                    {% endif %}

                    {% endfor %}

                  {% endif %}
                  {% endfor %}
                </ul>
              </nav>
            </div>
          </div>
          <div class="menu-right pull-right main-icons">
            <div class="top-header">
              <ul class="header-dropdown">
                {% if settings.show_catelogue != true %}
                {% if section.settings.show_wishlist %}
                <li class="mobile-wishlist">
                  <a href="/pages/wishlist">
                    <i class="bi bi-heart dtm-header-icon"></i>
                  </a>
                </li>
                {% endif %}
                {% endif %}

                {% if settings.show_catelogue != true %}
                <li class="onhover-dropdown mobile-account">
                  <i class="bi bi-person-fill dtm-header-icon" style="color: white"></i>
                  <ul class="onhover-show-div">
                    <li>
                      {% if customer %}
                      <a href="/account/logout" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.log_out"{%endif%}>
                        {{ 'layout.customer.log_out' | t }}
                      </a>
                      {% else %}
                      <a href="/account/login" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.log_in"{%endif%}>
                        {{ 'layout.customer.log_in' | t }}
                      </a>
                      {% endif %}
                    </li>
                    <li>
                      {% if customer %}
                      <a href="/account" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.account"{%endif%}>
                        {{ 'layout.customer.account' | t }}
                      </a>
                      {% else %}
                      <a href="/account/register" {% if settings.enable_lang_switcher %}data-trans-key="layout.customer.create_account"{%endif%}>
                        {{ 'layout.customer.create_account' | t }}
                      </a>
                      {% endif %}
                    </li>
                  </ul>
                </li>
                {% endif %}
              </ul>
            </div>
            <div>
              <div class="icon-nav">
                <ul>
                  {% if section.settings.enable_search %}
                  <li class="onhover-div mobile-search">
                    <div>
                      <i class="bi bi-search dtm-header-icon" style="color: white;"></i>
                      <i class="ti-search search-open" onclick="openSearch()"></i>
                    </div>
                    <div id="search-overlay" class="search-overlay">
                      <div>
                        <span class="closebtn" onclick="closeSearch()" title="Close Overlay">×</span>
                        <div class="overlay-content">
                          <div class="container">
                            <div class="row">
                              <div class="col-xl-12">
                                <form action="/search" method="get" role="search">
                                  <div class="form-group">
                                    <input type="search" class="form-control" name="q" placeholder="{{ 'general.search.placeholder' | t: terms: search.terms }}">
                                  </div>
                                  <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                  {% endif %}
                  {% if settings.enable_lang_switcher or section.settings.enable_currency %}
                  <li class="onhover-div mobile-setting">
                    <div>
                      <img src="{{ 'controls.png' | asset_img_url : '35x' }}" class="img-fluid" alt="">
                      <i class="ti-settings"></i>
                    </div>
                    <div class="show-div setting">

                      {% include 'language-picker' %}

                      {% if section.settings.enable_currency %}
                      <h6>currency</h6>
                      {% include 'currency-picker' %}
                      {% endif %}
                    </div>

                  </li>
                  {% endif %}
                  {% if settings.show_catelogue != true %}
                  <li class="onhover-div mobile-cart">
                    <div>
                      {% if settings.cart_redirect == 'redirect_to_cart'%}
                      <a href="/cart">
                        {% endif %}
                        <i class="bi bi-cart3 dtm-header-icon" style="color: white;"></i>
                        <i class="ti-shopping-cart"></i>
                        {% if settings.cart_redirect == 'redirect_to_cart'%}
                      </a>
                      {% endif %}

                      <span class="cart_qty_cls">
                        {{ cart.item_count }}
                      </span>
                    </div>

                    {% if settings.cart_redirect == 'ajax_cart' and settings.add_to_cart_style == 'fly_cart' %}
                    <ul class="show-div shopping-cart" id="cart_container_id">
                    </ul>
                    {% endif %}
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header end -->


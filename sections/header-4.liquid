{% schema %}
{
   "name":"Header",
   "settings":[
      {
         "type":"checkbox",
         "id":"show_transparent_sticky",
         "label":"Enalbe Transparent Sticky header in Desktop?",
         "default":false
      },
      {
         "type":"select",
         "id":"header_width",
         "label":"Header Width",
         "options":[
            {
               "value":"full-width",
               "label":"Full Width"
            },
            {
               "value":"standard-width",
               "label":"Standard Width "
            }
         ],
         "default":"standard-width"
      },
      {
         "type":"header",
         "content":"Top Bar"
      },
      {
         "type":"checkbox",
         "id":"show_topbar",
         "label":"Show Top bar",
         "default":true
      },
	  {
         "type": "text",
         "id": "topbar_padding",
         "label": "Padding",
         "default": "10px 0px"
      },
      {
         "type":"text",
         "id":"announcement_text",
         "label":"Announcement text",
         "default":"Announce something here"
      },
      {
         "type":"textarea",
         "id":"trans_announcement_text",
         "label":"Translate Announcement text"
      },
      {
         "type":"text",
         "id":"phone_number",
         "label":"Contact Number",
         "default":"CALL US: 123-456-7890"
      },
      {
         "type":"textarea",
         "id":"trans_phone_number",
         "label":"Translate Contact Number"
      },
      {
         "type":"text",
         "id":"email_address",
         "label":"Email Address",
         "default":"EMAIL: Support@Fiot.com"
      },
      {
         "type":"textarea",
         "id":"trans_email_address",
         "label":"Translate Email Address"
      },
      {
         "type":"checkbox",
         "id":"show_wishlist",
         "label":"Show Wishlist",
         "default":true
      },
      {
         "type":"header",
         "content":"Main header"
      },
      {
         "type":"image_picker",
         "id":"logo",
         "label":"Logo image"
      },
      {
         "type":"text",
         "id":"logo_max_width",
         "label":"Custom logo width (in pixels)",
         "default":"250"
      },
      {
         "type":"checkbox",
         "id":"enable_search",
         "label":"Enable Search",
         "default":true
      },
      {
         "type":"checkbox",
         "id":"enable_currency",
         "label":"Enable Currency Switcher",
         "default":true
      }
   ],
   "blocks":[
      {
      "type": "select-nav-menu",
      "name": "default nav menu",
      "settings": [
        {
          "type": "link_list",
          "id": "mainmenu",
          "label": "main-menu"
        }
      ]
    },{
         "type":"parent-item",
         "name":"Parent Item",
         "settings":[
            {
               "type":"text",
               "id":"menu_name",
               "label":"Menu Name",
               "default":"Home"
            },
            {
               "type":"textarea",
               "id":"trans_menu_name",
               "label":"Translate Menu Name"
            },
            {
               "type":"url",
               "id":"menu_link",
               "label":"Menu Link"
            },
            {
               "type":"checkbox",
               "id":"show_label",
               "label":"Show Label",
               "default":true
            },
            {
               "type":"text",
               "id":"label_text",
               "label":"Label Text",
               "default":"hot"

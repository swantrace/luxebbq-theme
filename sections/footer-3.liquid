              {% endunless %}
            </div>
          </div>
          {% endif %}
        </div>
        {% if section.settings.footer_width == 'standard-width' %}
      </div>
      {% else %}
    </div>
    {% endif %}
  </div>
  {% endif %}
  {% endfor %}
</footer>

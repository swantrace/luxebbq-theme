                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer3_{{blockId}}_address"{% endif %}>
                      {{ block.settings.address }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer3_{{blockId}}_address">{{ block.settings.trans_address | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}
                  {% if block.settings.contact_info %}
                  <li style="color: {{ settings.footer_link_color }}">
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer3_{{blockId}}_contact_info"{% endif %}>
                      {{ block.settings.contact_info }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer3_{{blockId}}_contact_info">{{ block.settings.trans_contact_info | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}
                  {% if block.settings.email %}
                  <li style="color: {{ settings.footer_link_color }}">
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer3_{{blockId}}_email"{% endif %}>
                      {{ block.settings.email }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer3_{{blockId}}_email">{{ block.settings.trans_email | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}

<!-- category -->
{% if section.settings.enabled %}
{% capture sectionId %}{{ section.id }}{% endcapture %}
{% assign collection_1 = collections[section.settings.coll_1] %}
{% assign collection_2 = collections[section.settings.coll_2] %}
{% assign collection_3 = collections[section.settings.coll_3] %}
<div class="category-bg {% if section.settings.use_equal_height %}equal_height {{ section.settings.image_ratio }} {{ section.settings.image_size }} bg_pos_{{ section.settings.image_position }}{% endif %}">
  <div class="container-fluid p-0">
    <div class="row order-section">
      <div class="col-sm-4 p-0">
        <a href="{{ collection_1.url }}" class="image-block">
          {% if section.settings.coll_1_img == blank %}
          {{ 'collection-1' | placeholder_svg_tag }}
          {% else %}
          
          {% if section.settings.use_equal_height %}
            <div>
              <span class="lazyload {% if settings.enable_blur_lazy_load %} blur-up {% endif %}" data-bgset="{% include 'bg-set', image: section.settings.coll_1_img %}" data-sizes="auto" data-parent-fit="cover"></span>
            </div>        
            {% else %}
            {% assign block_image = section.settings.coll_1_img %}
            {% assign img_url = block_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
            <img src="{{ block_image | img_url: '1370x385' }}" 
                 data-src="{{ img_url }}" 
                 data-widths="[157, 270, 303, 370, 377, 670, 570, 720, 900, 1080, 1296, 1512, 1728, 2048]" 
                 data-aspectratio="{{ block_image.aspect_ratio }}" 
                 data-sizes="auto" 
                 class="lazyload {% if settings.enable_blur_lazy_load %} blur-up {% endif %} img-fluid" alt="{{block_image.alt}}" >
            {% endif %}
          {% endif %}
        </a>
      </div>
      <div class="col-sm-4 p-0">
        <div class="contain-block even">
          <div>
            {% if section.settings.coll_2_subtitle != blank %}
            <h6 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#collection2_{{sectionId}}_coll2_subtitle"{% endif %}>
              {{ section.settings.coll_2_subtitle }}
            </h6>
            {% if settings.enable_lang_switcher %}
            <span class="hide" id="collection2_{{sectionId}}_coll2_subtitle">{{ section.settings.trans_coll_2_subtitle | raw }}</span>
            {% endif %}            
            {% endif %}
            {% if section.settings.coll_2_title != blank %}
            <a href="{{ collection_2.url }}">
              <h2 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#collection2_{{sectionId}}_coll2_title"{% endif %}>
                {{ section.settings.coll_2_title }}
              </h2>
              {% if settings.enable_lang_switcher %}
              <span class="hide" id="collection2_{{sectionId}}_coll2_title">{{ section.settings.trans_coll_2_title | raw }}</span>
              {% endif %}             
            </a>
            {% endif %}
            {% if section.settings.coll_2_offer != blank %}
            <a href="{{ collection_2.url }}" class="btn btn-solid category-btn {% if settings.enable_lang_switcher %}lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#collection2_{{sectionId}}_coll2_offer"{% endif %}>
              {{ section.settings.coll_2_offer }}
            </a>
            {% if settings.enable_lang_switcher %}
            <span class="hide" id="collection2_{{sectionId}}_coll2_offer">{{ section.settings.trans_coll_2_offer | raw }}</span>
            {% endif %}
            {% endif %}
            <a href="{{ collection_2.url }}"><h6>
              <span {% if settings.enable_lang_switcher %}data-trans-key="sections.featured_product.shop_now"{%endif%}>{{ 'sections.featured_product.shop_now' | t }}</span>

          <div class="video-img">
            {% if section.settings.image == blank %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% else %}

            {% assign block_image = section.settings.image %}
            {% assign img_url = block_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}

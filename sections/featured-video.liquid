{% schema %}
  {
    "name": "Featured video",
    "settings": [
      {
         "type":"checkbox",
         "id":"enabled",
         "label":"Enabled",
         "default":true
      },
	  {
         "type": "text",
         "id": "section_padding",
         "label": "Padding",
         "default": "0px 0px 0px 0px"
      },
	  {
	    "type": "image_picker",
        "id": "image",
        "label": "Image",
		"info": "Will be scaled down 350x340"
	  },
      {
         "type": "text",
         "id": "title",
         "label": "Title",
		 "default": "Product tutorial"
	  },
      {
         "type": "textarea",
         "id": "trans_title",
         "label": "Translate Title"
	  },
      {
         "type": "text",
         "id": "sub_title",
         "label": "Sub title",
		 "default": "special offer"
	  },
      {
         "type": "textarea",
         "id": "trans_subtitle",
         "label": "Translate subTitle"
	  },
      {
         "type": "text",
         "id": "video_url",
         "label": "Youtube Video Url",
		 "default": "https://www.youtube.com/embed/FRIDLxM8Roc"
	  }
	],
   "presets":[
      {
         "name":"Featured video",
         "category":"video"
      }
   ]
  }
{% endschema %}


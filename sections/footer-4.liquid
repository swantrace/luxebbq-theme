<!-- footer section -->
<footer class="{% if section.settings.show_transparent_sticky %} full-scroll-footer{% endif %} {% if section.settings.enabled_parallax_bg %}p-0 full-banner parallax {% endif %}  bg-img-footer {% if section.settings.enabled_overlay %}overlay-cls {% endif %}{% if section.settings.enabled_torn_footer %}effect-cls footer-effect{% endif %}" 
         style="background-image: url({{ section.settings.bg_image | img_url: 'master'}});">
  {% for block in section.blocks %}
  {% capture blockId %}{{ block.id }}{% endcapture %}
  {% if block.type == 'newsletter' %}
  <div class="{% unless settings.enable_gradiant_colors or section.settings.bg_image %}white-layout{% endunless %}" 
       style="{% unless settings.enable_gradiant_colors or section.settings.bg_image %}background-color: {{ settings.footer_newsletter_bg_color }};{% endunless %}">
    {% if section.settings.footer_width == 'standard-width' %}
    <div class="container">
      {% else %}
      <div class="container-fluid">
        {% endif %}
        <section class="small-section">
          <div class="row">
            <div class="col-xl-6 offset-xl-3">
              <div class="subscribe">
                <h4 style="color: {{ settings.footer_newsletter_text_color }};" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_newsltr_title"{% endif %}> 
                  {{ block.settings.title }}
                </h4>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_newsltr_title">{{ block.settings.trans_title | raw }}</span>
                {% endif %}
                <form action="{{ section.settings.form_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate form-inline subscribe-form classic-form" target="_blank" novalidate>
                  <div id="mc_embed_signup_scroll">
                    <div class="form-group mx-sm-3">
                      <input type="email" class="required email form-control"  value="" name="EMAIL" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}" id="mce-EMAIL" required>
                    </div>
                    <div id="mce-responses" class="clear">
                      <div class="response" id="mce-error-response" style="display:none"></div>
                      <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>
                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;" hidden>
                      <input type="text" name="b_17af379706d80b694776f991f_9ebb72e4d2" tabindex="-1" value="">
                    </div>
                    <button type="submit" class="btn btn-solid" name="subscribe" id="mc-embedded-subscribe" {% if settings.enable_lang_switcher %}data-trans-key="general.newsletter_form.submit"{%endif%}>{{ 'general.newsletter_form.submit' | t }}</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
        {% if section.settings.footer_width == 'standard-width' %}
      </div>
      {% else %}
    </div>
    {% endif %}
  </div>
  {% endif %}
  {% endfor %}

  <section class="{% unless settings.enable_gradiant_colors or section.settings.bg_image %}darken-layout{% endunless %}"
           style="padding: {{ section.settings.section_padding }};
                  {% unless settings.enable_gradiant_colors or section.settings.bg_image %}background-color: {{ settings.footer_bg_color }};{% endunless %}">
    {% if section.settings.footer_width == 'standard-width' %}
    <div class="container">
      {% else %}
      <div class="container-fluid">
        {% endif %}
        <div class="row footer-theme partition-f">
          {% for block in section.blocks %}
          {% capture blockId %}{{ block.id }}{% endcapture %}
          {% if block.type == 'Custom-html' %}
          <div class="col-lg-4 col-md-6 offset-right">
            <div class="footer-title footer-mobile-title">
              <h4 style="color: {{ settings.footer_text_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_title"{% endif %}>
                {{ block.settings.title }}
              </h4>
              {% if settings.enable_lang_switcher %}
              <span class="hide" id="footer4_{{blockId}}_title">{{ block.settings.trans_title | raw }}</span>
              {% endif %}
            </div>
            <div class="footer-contant">
              {% if block.settings.footer_logo %}
              {% capture image_size %}{{ block.settings.footer_logo_max_width | escape }}x{% endcapture %}
              <div class="footer-logo" itemscope itemtype="http://schema.org/Organization">
                <img class="lazyload {% if settings.enable_blur_lazy_load %} blur-up {% endif %}" src="{{ block.settings.footer_logo | img_url: image_size }}" alt="{{ shop.name }}" />
              </div>
              {% else %}
              <h2 itemprop="logo"><a href="/" itemprop="url">{{ shop.name }}</a></h2>
              {% endif %}
              {% if block.settings.text %}
              <p style="color: {{ settings.footer_link_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_text"{% endif %}>
                {{ block.settings.text }}
              </p>
              {% if settings.enable_lang_switcher %}
              <span class="hide" id="footer4_{{blockId}}_text">{{ block.settings.trans_text | raw }}</span>
              {% endif %}
              {% endif %}
              {% if block.settings.show_social %}
              <div class="footer-social">
                <ul>
                  {% if settings.social_facebook_link != blank %}
                  <li>
                    <a href="{{ settings.social_facebook_link | escape }}"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                  </li>
                  {% endif %}
                  {% if settings.social_google_link != blank %}
                  <li>
                    <a href="{{ settings.social_google_link | escape }}"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                  </li>
                  {% endif %}
                  {% if settings.social_twitter_link != blank %}
                  <li>
                    <a href="{{ settings.social_twitter_link | escape }}"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                  </li>
                  {% endif %}
                  {% if settings.social_instagram_link != blank %}
                  <li>
                    <a href="{{ settings.social_instagram_link | escape }}"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                  </li>
                  {% endif %}
                  {% if settings.social_rss_link != blank %}
                  <li>
                    <a href="{{ settings.social_rss_link | escape }}"><i class="fa fa-rss" aria-hidden="true"></i></a>
                  </li>
                  {% endif %}
                </ul>
              </div>
              {% endif %}
            </div>
          </div>
          {% elsif block.type == 'Menu' %}
          <div class="col">
            <div class="sub-title">
              <div class="footer-title">
                <h4 style="color: {{ settings.footer_text_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_menu_title"{% endif %}>
                  {{ block.settings.title }}
                </h4>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_menu_title">{{ block.settings.trans_title | raw }}</span>
                {% endif %}
              </div>
              <div class="footer-contant">
                <ul>
                  {% if block.settings.footer_linklist != blank %} 
                  {% assign footer_linklist = block.settings.footer_linklist -%}
                  {% for link in linklists[footer_linklist].links %}
                  <li>
                    {% assign data_title = link.title | split: '/' | first %}
                    {% assign data_json = link.title | split: '/' | last %}
                    <a href="{{ link.url }}" style="color: {{ settings.footer_link_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{link.handle}}"{% endif %}>
                      {{ data_title }}
                    </a>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer4_{{link.handle}}">{{ data_json | raw }}</span>
                    {% endif %}
                  </li>
                  {% endfor %}
                  {% endif %}
                </ul>
              </div>
            </div>
          </div>
          {% elsif block.type == 'Info' %}
          <div class="col">
            <div class="sub-title">
              <div class="footer-title">
                <h4 style="color: {{ settings.footer_text_color }}" {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_info_title"{% endif %}>
                  {{ block.settings.title }}
                </h4>
                {% if settings.enable_lang_switcher %}
                <span class="hide" id="footer4_{{blockId}}_info_title">{{ block.settings.trans_title | raw }}</span>
                {% endif %}
              </div>
              <div class="footer-contant">
                <ul class="contact-list">
                  {% if block.settings.address %}
                  <li style="color: {{ settings.footer_link_color }}"><i class="fa fa-map-marker"></i>
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_address"{% endif %}>
                      {{ block.settings.address }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer4_{{blockId}}_address">{{ block.settings.trans_address | raw }}</span>
                    {% endif %}  
                  </li>
                  {% endif %}
                  {% if block.settings.contact_info %}
                  <li style="color: {{ settings.footer_link_color }}"><i class="fa fa-phone"></i>
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_contact_info"{% endif %}>
                      {{ block.settings.contact_info }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer4_{{blockId}}_contact_info">{{ block.settings.trans_contact_info | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}
                  {% if block.settings.email %}
                  <li style="color: {{ settings.footer_link_color }}"><i class="fa fa-envelope-o"></i>
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_email"{% endif %}>
                      {{ block.settings.email }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer4_{{blockId}}_email">{{ block.settings.trans_email | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}
                  {% if block.settings.fax %}
                  <li style="color: {{ settings.footer_link_color }}"><i class="fa fa-fax"></i>
                    <span {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#footer4_{{blockId}}_fax"{% endif %}>
                      {{ block.settings.fax }}
                    </span>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="footer4_{{blockId}}_fax">{{ block.settings.trans_fax | raw }}</span>
                    {% endif %}
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
        {% if section.settings.footer_width == 'standard-width' %}
      </div>
      {% else %}
    </div>
    {% endif %}
  </section>

  <div class="sub-footer dark-subfooter">
    {% if section.settings.footer_width == 'standard-width' %}
    <div class="container">
      {% else %}
      <div class="container-fluid">
        {% endif %}      
        {% for block in section.blocks %}
        {% capture blockId %}{{ block.id }}{% endcapture %}
        {% if block.type == 'Copyright-footer' %}
        <div class="row">
          <div class="col-xl-6 col-md-6 col-sm-12">
            {% if block.settings.copyright_text != blank %}
            <div class="footer-end {% if settings.enable_lang_switcher %}lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#footer4_{{blockId}}_copyright_text"{% endif %}>
              {{ block.settings.copyright_text }}              
            </div>
            {% if settings.enable_lang_switcher %}
            <span class="hide" id="footer4_{{blockId}}_copyright_text">{{ block.settings.trans_copyright_text | raw }}</span>
            {% endif %}
            {% endif %}
          </div>
          {% if block.settings.show_payment_icons %}
          <div class="col-xl-6 col-md-6 col-sm-12">
            <div class="payment-card-bottom">
              {% unless shop.enabled_payment_types == empty %}
                {% assign payment_icons_available = 'amazon_payments,american_express,apple_pay,bitcoin,cirrus,dankort,diners_club,discover,dogecoin,dwolla,forbrugsforeningen,google_pay,interac,jcb,klarna,litecoin,maestro,master,paypal,stripe,shopify_pay,visa' | split: ',' -%}
                <ul>
                  {% for type in shop.enabled_payment_types %}
                    {% if payment_icons_available contains type %}
                      <li class="payment-icon">
                        {% assign icon_name = type | prepend: 'icon-' -%}
                        {% include icon_name %}
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endunless %}
            </div>
          </div>
          {% endif %}
        </div>
        {% endif %}
        {% endfor %}
        {% if section.settings.footer_width == 'standard-width' %}
      </div>
      {% else %}
    </div>
    {% endif %}
  </div>
</footer>
<!-- footer section end-->


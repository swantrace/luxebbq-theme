    stateKey: "searchString",
    actionType: "changeSearchString",
    title: "Search",
    type: "SearchInput",
    info: [],
    selected: ""
}, {
    stateKey: "selectedCookTypesAndBrands",
    actionType: "changeCookTypesAndBrands",
    title: "Grill Types\/Brands",
    type: "NestedFilter",

  {% if section.settings.section_width == 'full-width' %}
  <div class="container-fluid">
    {% else %}
    <div class="container">
      {% endif %}
      <div class="row partition-cls">
        {% if collection.empty? %}
        {% capture current %}{% cycle 1,2,3,4,5,6,1,2 %}{% endcapture %}
        {% for i in (1..4) %}
        <div class="col-xl-3 col-sm-6">
          <div class="product-box ">
            <div class="img-wrapper">
              <div class="front">
                <a href="#">
                  {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                </a>
              </div>
              <div class="cart-info cart-wrap">
                <button  title="Add to cart"><i class="ti-shopping-cart" ></i></button>
                <a href="javascript:void(0)"  title="Add to Wishlist"><i class="ti-heart" aria-hidden="true"></i></a>
                <a href="#" data-toggle="modal" data-target="#quick-view" title="Quick View"><i class="ti-search" aria-hidden="true"></i></a>
                <a href="compare.html" title="Compare"><i class="ti-reload" aria-hidden="true"></i></a>
              </div>
            </div>
            <div class="product-detail">
              <a href="#">
                <h6 {% if settings.enable_lang_switcher %}data-trans-key="homepage.onboarding.product_title"{%endif%}>{{ 'homepage.onboarding.product_title' | t }}</h6>
              </a>
              <h4>{{ '$20.00' }}</h4>
            </div>
          </div>
        </div>
        {% endfor %}
        {% else %}
        {% for product in collection.products limit: pro_limit %}
        <div class="{{column_grid_width}}">
          {% include 'product-grid-item' %}
        </div>
        {% endfor %}
        {% endif %}
      </div>
      {% if section.settings.section_width == 'full-width' %}
    </div>
    {% else %}
  </div>
  {% endif %}

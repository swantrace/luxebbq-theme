  <main>

    <div class="btn-product-change">
      {% if settings.display_prev_next_product and collection %}
      {% if collection.previous_product %}
      <a class="prev btn" href="{{ collection.previous_product }}" title="Prev" {% if settings.enable_lang_switcher %}data-trans-key="products.product.prev"{%endif%}>
        {{ 'products.product.prev' | t }}
      </a> /
      {% endif %}
      {% if collection.next_product %}
      <a class="next btn" href="{{ collection.next_product }}" title="Next" {% if settings.enable_lang_switcher %}data-trans-key="products.product.next"{%endif%}>
        {{ 'products.product.next' | t }}
      </a>
      {% endif %}
      {% endif %}
    </div>

    <div class="slideshow">
      {% for image in product.images %}
      {% capture img_id %}FeaturedImage-{{ section.id }}-{{ image.id }}{% endcapture %}
      <div class="slide">
        <div class="slide__wrap">
          <div class="slide__img" id="{{ img_id }}" style="background-image: url({{ image | img_url: 'master' }});"></div>
          <div class="slide__title-wrap">
            {% assign data_title = product.title | split: '|' | first | escape %}
            {% assign data_json = product.title | split: '|' | last %}
            <h3  itemprop="name" class="slide__title mb-2{% if settings.enable_lang_switcher %} lang_trans{% endif %}" {% if settings.enable_lang_switcher %}data-trans="#{{product.id}}_pro_title"{% endif %}>
              {{ data_title }}
            </h3>
            {% if settings.enable_lang_switcher %}
            <span class="hide" id="{{product.id}}_pro_title">{{ data_json | raw }}</span>
            {% endif %}
            {% if section.settings.show_product_desc %}
            <div class="slide__desc">
              <div>
                {{ product.description | split: '[countdowntimer-date-start]' | first | truncatewords: 30 }}
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}  
    </div><!-- /slideshow -->

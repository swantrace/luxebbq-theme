.home-section-about-block .banner-contain h5{
    width: 35%;
    margin: 0 auto;
}

.dtm.announcement-bar{

    background-color: {{ settings.primary_button_bg_color }};
    padding: 10px 0px;
    margin: 0;
    text-align: center;

    a{
    color: {{ settings.primary_button_text_color }};
    }

}

.dtm.dtm-title{
    padding: 30px 0;
}

.dtm .title1 .parallelograms-group {
    width: 70%;
    display: flex;
    flex-grow: 1;

    .parallelograms{
        display: block;
        height: 13px;
        transform: skew(-30deg);
        background: {{ settings.primary_button_bg_color }};
    }

    .parallelogram-lt{
        width: 1%;
        margin-right: 10px;
    }

    .parallelogram-rt{
        width: 1%;
        margin-right: 10px;
    }

    .parallelogram-br{
        width: 100%;
    }

}


@media screen and (max-width:767px){
    .home-section-about-block .banner-contain h5{
        width: 80%;
    }

}
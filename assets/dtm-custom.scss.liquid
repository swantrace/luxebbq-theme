/*=====================
global Settings
==========================*/
$theme-deafult: #fb711c;

.image-overlay
{
    filter: brightness(60%);
}

.instock-lable{
    color:#8CC63F;
    font-size: 18px;

    .fa{
        padding: 0 10px;
    }
}


.product-box{

    &:hover {
        box-shadow: 0 2px 5px #dddddd;
        transition: all 0.5s ease;
    }

    .product-detail h6{
        margin-top: 20px;
    }
}

/*=====================
Header & Footer
==========================*/

.dtm .pixelstrap a .sub-arrow{
  display:none;  
}

.header-phone-banner{
    position: relative;
    z-index: 999999;


    .header-phone-block:before{
        left: -6px;
        transform: skewX(12deg);
    }

    .header-phone-block:after, .header-phone-block:before{
        content: "";
        position: absolute;
        display: block;
        top: 0;
        bottom: 0;
        width: 20px;
        background-color: inherit;
    }

    .header-phone-block:after{
        right: -6px;
        transform: skewX(-12deg);
    }


    .header-phone-block{
        background: $theme-deafult;
        padding: 8px 25px;
        display: flex;
        position: absolute;
        right: 0;


    
        .header_social{
            margin-left: 15px;
            
            li{    padding: 0 2px; }

            a{
                color: #111;
            }
        }
    
        .call-text{
            color: #111;
        }
    }
}

.dtm .pixelstrap a, .dtm .pixelstrap a:hover, .dtm .pixelstrap a:active {
    font-weight: 500;
    font-size: 12px;
    padding-right: 30px;
    letter-spacing: 0.05em;
}

.dtm .newsletter-wrap {

    .footer-title h2{
        font-size: 30px;
    }

    .btn{
        background-color: #fff;
        color: #111;
    }

    .parallelograms-group {
        max-width: 40% !important;
        .parallelograms{
            background: {{ settings.footer_newsletter_text_color }};
        }

        .parallelogram-lt, .parallelogram-rt{
            width: 10px;
        }

    }

}


/*=====================
Wishlist Pages
==========================*/
.wishlist-section{
    h2{font-size: 21px;}

    .btn{color: #fff;}

    .share-buttons{
        text-align:left;

        .product-icon{

            .share-btn i, .compare-btn i{padding-left: 0; margin-left: 0;}

            .remove-btn,.remove-btn a {color: #CCCCCC; }
        }
    }
    
    .cart-table thead th:last-child, tbody tr td:last-child {text-align:left;}


}



/*=====================
Landing Pages
==========================*/
.dtm .full-banner{

    .landing-page-title{
        color:#fff;
        font-size: 40px;
    }
}


.about-section p{
    color: #111;;
}


/*=====================
Product Pages
==========================*/
.share-buttons{
    display:flex;
}

.product-right{

    #product_price{
        font-weight: 600;
    }

    .product-icon{
        .wishlist-btn span{
            font-size: 15px;
            color: $theme-deafult;
        }
    }

    .qty-box{
        margin-bottom: 25px;
    }
}

.collection-wrapper .slider-nav .slick-slide{
    max-width: 150px !important;
}

.product-icon {

    .share-btn, .compare-btn{
        background-color: transparent;
        border: none;
        color: $theme-deafult;
        i {
          font-size: 15px;
          padding-left: 10px;
          margin-left: 15px;
          transition: all 0.5s ease;
          color: $theme-deafult;
        }
        span {
          padding-left: 6px;
          font-size: 15px;
          color: $theme-deafult;
        }
        &:hover {
          i {
            color: $theme-deafult;
            transition: all 0.5s ease;
          }
        }
    }

}


/*=====================
Homepage
==========================*/
.home-section-about-block .banner-contain h5{
    width: 35%;
    margin: 0 auto;
}

.dtm.announcement-bar{

    background-color: {{ settings.primary_button_bg_color }};
    padding: 10px 0px;
    margin: 0;
    text-align: center;

    a{
        color: {{ settings.primary_button_text_color }};

        h4{
            font-size:15px;
            margin-bottom: 0;
            line-height: 1.5;
        }
    }

}

.featured-products-banner {
    padding: 0;
    position: relative;
    overflow: hidden;

    img{
        filter: brightness(60%);
    }

      &:hover {
        img {
          transform: scale(1.1) translateX(14px);
          transition: 0.5s ease;
        }
      }
}

.dtm-featured-products-section .row{

    .dtm-featured-product-title{
        z-index: 1;
        position: absolute;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color:#fff;
        width: 100%;
        height: 100%;
    }

    a{
        display: block; width: 100%;
    }

    .img-fluid{
        object-fit: cover;
        object-position: center center;
        width: 100%;
        height: 400px;
    }


}

.dtm .parallelograms-group {
    width: 70%;
    display: flex;
    flex-grow: 1;

    .parallelograms{
        display: block;
        height: 13px;
        transform: skew(-30deg);
        background: {{ settings.primary_button_bg_color }};
    }

    .parallelogram-lt{
        width: 10px;
        margin-right: 10px;
    }

    .parallelogram-rt{
        width: 10px;
        margin-right: 10px;
    }

    .parallelogram-br{
        width: 100%;
    }

}

.slick-vertical .slick-slide{
    border: none !important; 
}


.dtm .two-columns-section  .parallelograms-group{
    max-width: 40% !important;

    .parallelogram-rt, .parallelogram-lt{
        width: 10px;
    }
}


@media screen and (max-width:767px){
    .home-section-about-block .banner-contain h5{
        width: 80%;
    }

}


@media (max-width: 480px){
    .title1 .title-inner1{   font-size: 25px;}
    .dtm .parallelograms-group{width:50% }
}

@media (max-width: 1367px){


}


@media (max-width: 1199px){
    .title1 .title-inner1{   font-size: 25px;}
    .dtm .parallelograms-group{width: 60%;}

    header.dtm.header-5 {
        background-color: #111111;
    }

    .toggle-nav i{color:#fff}

    .pixelstrap.sm-horizontal li a{color: #111111  }

    .dtm .pixelstrap a .sub-arrow{
        display:block;  
    }

    #main-menu > li > a.active::after{
        width: 20% !important;
    }

    .header-phone-banner .header-phone-block{
        position: inherit; 
        max-width: 400px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

}


@media (max-width: 480px){
    .header-phone-banner{display:none;}
}
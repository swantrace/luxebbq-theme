.boxnav {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  z-index: 1000;
  width: 100%; }

.boxnav__item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-nav-bg);
    border: 0;
    height: 4rem;
    flex: 1; }
.boxnav__item:focus {
  outline: none; }

.boxnav__item--prev:hover {
  color: var(--color-nav-hover); }

.boxnav__item--next:hover {
  color: var(--color-nav-hover); }

.boxnav__label {
  padding: 0 0.5rem;
  font-size: 1.15rem;
  position: relative; }

.boxnav__label--total::before {
  content: '';
  position: absolute;
  right: 100%;

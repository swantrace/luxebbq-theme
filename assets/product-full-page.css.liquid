.content {
  text-align: center; }

.codrops-header {
  position: relative;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-items: center;
  color: var(--color-header);
    padding: 1rem 0; }

.codrops-header__title {
  font-size: 1rem;
  line-height: 1;

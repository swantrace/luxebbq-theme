  position: relative; }

.social {
  display: none; }

.social__item {
  display: block;
  font-size: 0.75rem;
  margin: 0 0.25rem; }

.slideshow {
  position: relative;
  width: 100%; }
.slideshow::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);

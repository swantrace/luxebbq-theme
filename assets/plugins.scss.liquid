@media (max-width: 576px) {
  #quick-view-product{
    .quick-view-product{
      width: 96%;
      height: 380px;
      overflow: auto;
      text-align: center;
      .primary_block{
        padding: 10px;
        margin: 0;
        .product-left-column {
          margin-bottom: 10px;
          #thumbs_list_quickview {
            #thumblist_quickview {
              .slick-slide{
                border: none;
                >div{
                  img{
                    max-width: 100%;
                  }
                }
              }
            }
          }
        }
        .swatch {
          .swatch-element {
            float:none;
          }
        }
      }
    }
  }

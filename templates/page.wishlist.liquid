{% include 'breadcrumb' %}
<!--section start-->
<section class="wishlist-section section-b-space wishlist-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 wishlist-grid flex">
        <div class="wishlist-grid flex">
          <table class="table cart-table table-responsive-xs wishlist_table wishlist-grid">
            <thead>
              <tr class="table-head">
                <th scope="col" {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.image"{%endif%}>{{ 'general.wishlist.image' | t }}</th>
                <th scope="col" {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.product_name"{%endif%}>{{ 'general.wishlist.product_name' | t }}</th>
                <th scope="col" {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.price"{%endif%}>{{ 'general.wishlist.price' | t }}</th>
                <th scope="col" {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.avalibility"{%endif%}>{{ 'general.wishlist.avalibility' | t }}</th>
                <th scope="col" {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.action"{%endif%}>{{ 'general.wishlist.action' | t }}</th>
              </tr>
            </thead>
            {% paginate collections.all.products by 9999 %}
            {% for product in collections.all.products %}
            <tbody  class="product-tile-container wishlist-tile-container" data-product-id="{{ product.id }}" data-product-handle="{{ product.handle }}">
              <tr>
                <td>
                  <a href="{{ product.url }}"><img  class="image--main" src="{{ product.featured_image | product_img_url: 'grande' }}" alt="{{ product.title }}"></a>
                </td>
                <td>
                  <a href="{{ product.url }}">
                    {% assign data_title = product.title | split: '|' | first %}
                    {% assign data_json = product.title | split: '|' | last %}
                    <h6 {% if settings.enable_lang_switcher %}class="lang_trans" data-trans="#{{product.id}}_pro_title"{% endif %}>
                      {{ data_title }}
                    </h6>
                    {% if settings.enable_lang_switcher %}
                    <span class="hide" id="{{product.id}}_pro_title">{{ data_json | raw }}</span>
                    {% endif %}
                  </a>
                  <div class="mobile-cart-content row">
                    <div class="col-xs-3">
                      <p>{% if product.available %}Instock{% else %}Out of stock{% endif %}</p>
                    </div>
                    <div class="col-xs-3">
                      <h2 class="td-color">{{ product.variants[0].price | money }}</h2>
                    </div>
                    <div class="col-xs-3">
                      <h2 class="td-color product-tile--tile-actions">
                        {% include 'wishlist-button'%}
                        <a href="/cart/add?id={{ product.selected_or_first_available_variant.id }}&quantity=1" class="icon mr-1 action--quick-cart tile-actions--btn flex cart-btn"><i class="ti-close"></i> </a>
                      </h2>
                    </div>
                  </div>
                </td>
                <td>
                  <h2 class="td-color">{{ product.variants[0].price | money }}</h2>
                <td>
                  <p>{% if product.available %}Instock{% else %}Out of stock{% endif %}</p>
                </td>
                <td>
                  <a class="action--wishlist tile-actions--btn flex wishlist-btn icon mr-3 " style="font-size:18px" href="#" data-product-handle="{{ product.handle }}">
                    <i class="ti-trash" aria-hidden="true"></i>
                  </a>
                  <a href="/cart/add?id={{ product.selected_or_first_available_variant.id }}&quantity=1" style="font-size:18px" class="icon mr-1 action--quick-cart tile-actions--btn flex cart-btn"><i class="ti-shopping-cart"></i> </a>
                </td>
              </tr>
            </tbody>

            {% endfor %}
            
            
            {% endpaginate %}
            
           
          </table>
        </div>
        <div class="text-right mt-5 checkout wishlist-grid ">
          <a href="/checkout" class="btn btn-solid" {% if settings.enable_lang_switcher %}data-trans-key="cart.general.checkout"{%endif%}>{{ 'cart.general.checkout' | t }}</a>
        </div>
      </div>
    </div>
    <div class="row cart-buttons wishlist-grid--empty-list">
      <div class="col-12">
        <div class="text-center">
          <img class="" src="{{ 'empty-search.jpg' | asset_url }}" alt="Wishlist loading">
          <h5 class="title-font mb-3 empty-list--text " {% if settings.enable_lang_switcher %}data-trans-key="general.wishlist.empty_wishlist"{%endif%}>{{ 'general.wishlist.empty_wishlist' | t }}</h5>
          <a href="/collections/all" class="btn btn-solid">Start Shopping</a>
        </div>
      </div>
    </div>
    <!-- Loader -->
    <div class="wishlist-loader">
      <h5 class="wishlist-loader--text">Loading your customized wishlist...</h5>
    </div>
  </div>
</section>
<!--section end-->
<script>
  $( document ).ready(function() {
    var rowCount = $('.wishlist_table tbody').length;
    //alert(rowCount);
    if(rowCount == 0){
      $('.wishlist-grid').hide();
      $('.checkout').hide();
    }
    else{
      $('.wishlist-grid').show(); 
       $('.checkout').show();
    }
  });
</script>